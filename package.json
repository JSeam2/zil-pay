{
  "name": "zil-pay",
  "version": "0.3.5",
  "description": "ZilPay browser Extension for zilliqa blockchain",
  "shortName": "ZilPay Zilliqa wallet",
  "private": false,
  "scripts": {
    "build": "npm run test:unit && npm run build:ui && npm run build:extension",
    "build:extension": "cross-env NODE_ENV=production webpack --config webpack/webpack.config.js",
    "build:ui": "cross-env NODE_ENV=production vue-cli-service build",
    "dev": "npm run serve:ui | npm run serve:extension",
    "serve:web": "vue-cli-service serve",
    "serve:ui": "cross-env NODE_ENV=development vue-cli-service build --watch",
    "serve:extension": "cross-env NODE_ENV=development webpack --config webpack/webpack.config.js",
    "test:unit": "vue-cli-service test:unit",
    "test:watch": "vue-cli-service test:unit --watch",
    "lint": "vue-cli-service lint",
    "lint:fix": "vue-cli-service lint --fix"
  },
  "dependencies": {
    "@zilliqa-js/zilliqa": "^0.8.7",
    "core-js": "^3.4.3",
    "crypto": "^1.0.1",
    "extensionizer": "^1.0.1",
    "namicorn": "^0.3.7",
    "qrcode": "^1.4.4",
    "rxjs": "^6.5.3",
    "uuidv4": "^6.0.0",
    "vue": "^2.6.10",
    "vue-bem-cn": "^1.1.1",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.1.0",
    "@vue/cli-plugin-eslint": "^4.1.0",
    "@vue/cli-plugin-router": "^4.1.0",
    "@vue/cli-plugin-unit-jest": "^4.1.1",
    "@vue/cli-plugin-vuex": "^4.1.0",
    "@vue/cli-service": "^4.1.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-eslint": "^10.0.3",
    "cross-env": "^6.0.3",
    "eslint": "^5.16.0",
    "eslint-config-strongloop": "^2.1.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^9.4.3",
    "node-sass": "^4.12.0",
    "sass-loader": "^8.0.0",
    "vue-template-compiler": "^2.6.10",
    "webpack-assets-manifest": "^3.1.1",
    "webpack-cli": "^3.3.10"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "keywords": [
    "blockchain",
    "zilliqa",
    "ZilPay",
    "dapp",
    "metamask"
  ],
  "license": "MIT",
  "homepage": "https://zilpay.xyz/",
  "author": "lich666black",
  "engines": {
    "node": "^11.14.0",
    "npm": "^6.9.0"
  }
}
