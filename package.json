{
  "name": "zil-pay",
  "version": "0.2.6",
  "description": "ZilPay browser Extension for zilliqa blockchain",
  "private": false,
  "scripts": {
    "test": "export VUE_CLI_BABEL_TARGET_NODE=true && export VUE_CLI_BABEL_TRANSPILE_MODULES=true && jest --notify --detectOpenHandles --config jest.config.js",
    "build": "vue-cli-service build",
    "serve": "vue-cli-service serve",
    "all:firefox": "export NODE_ENV=development && export PLATFORM=firefox && npm run build && npm run scripts && node manifest.js",
    "all:chrome": "export NODE_ENV=development && export PLATFORM=chrome && npm run build && npm run scripts && node manifest.js",
    "content": "webpack --config extension/content/webpack.config.js --progress --colors -o ./dist/contentScript.js",
    "inpage": "webpack --config extension/inpage/webpack.config.js --progress --colors -o ./dist/inpage.js",
    "background": "webpack --config extension/controllers/webpack.config.js --progress --colors -o ./dist/background.js",
    "scripts": "npm run content && npm run inpage && npm run background",
    "build:prod:firefox": "export NODE_ENV=production && npm run all:firefox",
    "build:prod:chrome": "export NODE_ENV=production && npm run all:chrome",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@zilliqa-js/zilliqa": "^0.7.5",
    "bip39": "^3.0.2",
    "clipboard-copy": "^3.1.0",
    "cross-fetch": "^3.0.4",
    "crypto": "^1.0.1",
    "extension-streams": "^1.0.7",
    "extensionizer": "^1.0.1",
    "jazzicon": "^1.5.0",
    "qrcode": "^1.4.1",
    "rxjs": "^6.5.2",
    "uuid": "^3.3.3",
    "vue": "^2.6.10",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.2.3",
    "jest": "^24.9.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.3.1",
    "vue-template-compiler": "^2.6.10",
    "webpack-cli": "^3.3.7"
  },
  "keywords": [
    "blockchain",
    "zilliqa",
    "ZilPay",
    "dapp",
    "metamask"
  ],
  "license": "MIT",
  "homepage": "https://zilpay.xyz/",
  "author": "lich666black",
  "engines": {
    "node": "^11.14.0",
    "npm": "^6.9.0"
  }
}
