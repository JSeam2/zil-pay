{
    "name": "ZilPay",
    "short_name": "ZilPay Zilliqa wallet",
    "version": "0.1.7",
    "description": "ZilPay browser Extension for zilliqa blockchain",
    "author": "https://zilpay.xyz",
    "manifest_version": 2,
    "icons": {
        "16": "icon16.png",
        "19": "icon19.png",
        "38": "icon38.png",
        "39": "icon19.png",
        "48": "icon48.png",
        "96": "icon96.png",
        "128": "icon128.png"
    },
    "storage": {
        "managed_schema": "schema.json"
    },
    "permissions": [
        "clipboardWrite",
        "storage",
        "notifications",
        "activeTab",
        "webRequest",
        "tabs",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        "inpage.js"
    ],
    "browser_action": {
        "default_icon": {
            "19": "icon19.png",
            "38": "icon38.png"
        },
        "default_title": "ZilPay",
        "default_popup": "index.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}