{
  "name": "ZilPay",
  "short_name": "ZilPay Zilliqa wallet",
  "version": "0.0.5",
  "description": "ZilPay Chrome Extension for zilliqa blockchain",
  "author": "lich666dead",
  "manifest_version": 2,
  "icons": {
    "180": "/favicon.ico"
  },
  "storage": {
    "managed_schema": "schema.json"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "unlimitedStorage",
    "storage",
    "notifications",
    "webRequest",
    "https://api.coinmarketcap.com/v1/ticker/*"
  ],
  "content_scripts": [
    {
      "matches": [
          "file://*/*",
          "http://*/*",
          "https://*/*"
      ],
      "js": [
          "contentScript.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "inpage.js"
  ],
  "browser_action": {
    "default_title": "ZilPay",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
        "background.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
